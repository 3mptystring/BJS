{
  "tags": {
    "allowUnknownTags": true
  },
  "plugins": [
    "plugins/markdown",
    "plugins/summarize"
  ],
  "markdown": {
    "parser": "gfm"
  },
  "source": {
    "exclude": [
      ".git",
      ".meteor",
      "node_modules"
    ],
    "includePattern": ".+\\.js(x|doc)?$"
  },
  "templates": {
    "cleverLinks": true,
    "monospaceLinks": true
  }
}
